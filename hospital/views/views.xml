<odoo>
  <data>
<!--    &lt;!&ndash; explicit list view definition &ndash;&gt;-->

    <record model="ir.ui.view" id="hospital.list">
      <field name="name">hospital list</field>
      <field name="model">hospital.hospital</field>
      <field name="arch" type="xml">

        <tree string="Hospital">
          <field name="first_name"/>
          <field name="middle_name"/>
          <field name='last_name'/>
          <field name="patient_age"/>
          <field name="doctor_id"/>
          <field name="description"/>
          <field name="priority"/>
          <field name="date"/>

        </tree>
      </field>
    </record>

 <record model="ir.ui.view" id="hospital.form">
      <field name="name">hospital list</field>
      <field name="model">hospital.hospital</field>
      <field name="arch" type="xml">
              <form>
                <group>
                  <field name="first_name"/>
                  <field name="middle_name"/>
                  <field name="last_name"/>

                </group>
                <group>
                     <field name="doctor_id"/>
                     <field name="description"/>
                     <field name="priority"/>
                </group>
              </form>
      </field>
</record>

    <record model="ir.ui.view" id="hospital.search">
      <field name="name">hospital list</field>
      <field name="model">hospital.hospital</field>
      <field name="arch" type="xml">
              <search>
                <field name="first_name"  string='Pateint Name' filter_domain="['|','|',('first_name','ilike',self),('middle_name', 'ilike' ,self),('last_name','ilike',self)"/>

                <field name="doctor_id" string='Docter Code'/>
                <field name="date" string='Date'/>
<!--                <filter name="doctor_id" string='Docter Code' domain="[('doctor_id','=',False)]"/>-->
                <filter name="priority" string='priority' domain="[('priority','=','high')]"/>
              </search>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="hospital.action_window">
      <field name="name">hospital window</field>
      <field name="res_model">hospital.hospital</field>
      <field name="view_mode">tree,form</field>
    </record>


