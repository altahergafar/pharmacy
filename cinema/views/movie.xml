<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- list view of movie-->

        <record model="ir.ui.view" id="view_movie_tree">
            <field name="name">Movies List</field>
            <field name="model">movie.show</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="movie_name"/>
                    <field name="movie_date"/>
                    <field name="movie_duration"/>
                </tree>
            </field>
        </record>
        <!--form view of movie-->
        <record model="ir.ui.view" id="view_movie_form">
            <field name="name">Movie form view</field>
            <field name="model">movie.show</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                         <h1>
                          <field name="sequence"/>
                         </h1>
                        </div>
                        <group>
                            <group>
                                <field name="movie_name"/>
                                <field name="movie_date"/>
                                <field name="movie_duration"/>
                            </group>
                        </group>
                        <group>
                            <notebook>
                                <page name="ticket_info" string="Ticket Info">
                                    <group>
                                        <group>
                                        <field name="tickets_sold"/>
                                        <field name="description"/>
                                    </group>
                                    </group>
                                </page>

                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!--Film search view -->
        <record model="ir.ui.view" id="view_search_movie">
            <field name="name">Movie Search</field>
            <field name="model">movie.show</field>
            <field name="arch" type="xml">
                <search>
                    <field name="movie_name"/>
                    <field name="movie_date"/>
                    <separator/>
                    <filter name="date_filter" string="Movie Date" date="movie_date"/>
                    <separator/>
                </search>
            </field>
        </record>
        <!--actions opening views on movie-->

        <record model="ir.actions.act_window" id="movie_action_window">
            <field name="name">
                Movies
            </field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">movie.show</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    create a new movie!
                </p>
            </field>
        </record>

        <menuitem name="Movies" id="movies_main_menu" parent="cinema_menu_root"
                  sequence="3" action="movie_action_window"
        />

    </data>
</odoo>