<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- list view of film-->

        <record model="ir.ui.view" id="film_list">
            <field name="name">Films List</field>
            <field name="model">film.film</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="f_name" string="Name"/>
                    <field name="movie_date"/>
                </tree>
            </field>
        </record>
        <!--form view of film-->
        <record model="ir.ui.view" id="film_form">
            <field name="name">Film form view</field>
            <field name="model">film.film</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="f_name"/>
                            <field name="movie_date"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!--Film search view -->
        <record model="ir.ui.view" id="film_search_view">
            <field name="name">Film Search</field>
            <field name="model">film.film</field>
            <field name="arch" type="xml">
                <search>
                    <field name="f_name"/>
                    <field name="movie_date"/>
                     <separator/>
                    <filter name="date_filter" string="Movie Date" date="movie_date"/>
                     <separator/>
                </search>
            </field>
        </record>
        <!--actions opening views on film-->

        <record model="ir.actions.act_window" id="film_action_window">
            <field name="name">
                Films
            </field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">film.film</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    create a new film!
                </p>
            </field>
        </record>

        <menuitem name="Films" id="film_main_menu" parent="cinema_menu_root"
                  sequence="4"
        />
        <menuitem name="Film" id="film_sub_menu" parent="film_main_menu"
                  sequence="5" action="film_action_window"/>
    </data>
</odoo>