    <!-- explicit list view definition -->

        <record id="view_beauty__salon_form" model="ir.ui.view">
             <field name="name">Beauty_Salon.list.form</field>
             <field name="model">beauty__salon.beauty__salon</field>
             <field name="arch" type="xml">
                 <form string="beauty salon">
                     <sheet>
                         <group>
                            <field name="name"/>
                            <field name="Service"/>
                            <field name="ExpertName"/>
                            <field name="Request_date"/>
                            <field name="Cost"/>
                         </group>
                     </sheet>
                 </form>
             </field>
         </record>

         <record id="view_employee_category_list" model="ir.ui.view">
             <field name="name">Beauty_Salon.list.view</field>
             <field name="model">beauty__salon.beauty__salon</field>
             <field eval="8" name="priority"/>
             <field name="arch" type="xml">
                  <tree>
                      <field name="name"/>
                      <field name="Service"/>
                      <field name="ExpertName"/>
                      <field name="Request_date"/>
                      <field name="Cost"/>
                    </tree>
             </field>
         </record>

         <record id="beauty__salon_action_window" model="ir.actions.act_window">
             <field name="name">Beauty Salon</field>
             <field name="res_model">beauty__salon.beauty__salon</field>
             <field name="view_mode">tree,form</field>
         </record>

