<odoo>
  <data>
  
  
  
  <record id="view_ticket_form" model="ir.ui.view">
            <field name="name">ticket.form</field>
            <field name="model">ticket.ticket</field>
            <field name="arch" type="xml">
                <form string="Ticket">
                   <sheet>
                          <group col="4">
                             <field name="name"/>
                             <field name="email"/>
                             <field name="phone"/>
                             <field name="subject"/>
                             <field name="date"/>
                             <field name="status"/>
                         </group>
                         <notebook>
                            <page string="Details">  
                            <group> 
                                 <field name="Description"/>
                             </group>
                             </page>
                      </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        
        
        
        
        <record id="view_ticket_trees" model="ir.ui.view">
            <field name="name">ticket.list</field>
            <field name="model">ticket.ticket</field>
            <field name="arch" type="xml">
                <tree string="Ticket">
                        <field name="name"/>
                         <field name="email"/>
                         <field name="phone"/>
                         <field name="subject"/>
                         <field name="status"/>
                </tree>
            </field>
        </record>
        
        
